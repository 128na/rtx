image[se]=texture_{{ file.name+10 }}.2.8,-64,-96
{%- elif "back" in file %}
image[ne]=texture_{{ file.name-10 }}.2.7,-64,-96
image[se]=texture_{{ file.name-10 }}.2.8,-64,-96
{%- else %}
image[ne]=texture_{{ file.name }}.2.7,-64,-96
