{
  "version": 1,
  "definitions": [
{%- for file in files %}
    {
      "outputPath": "dist/texture_{{ file }}.png",
      "rules": [
        {
          "name": "mergeImage",
          "mode": "normal",
          "comment": "road",
          "pathes": [
            "workspace/tmp_texture_{{ file }}.png",
            "workspace/bg_road.png"
          ],
          "offset": {
            "x": 0,
            "y": 0
          }
        },
        {
          "name": "removeSpecialColor"
        }
      ]
    },
    {
      "outputPath": "dist/texture_{{ file }}_icon.png",
      "rules": [
        {
          "name": "mergeImage",
          "mode": "normal",
          "comment": "icon,cursor",
          "pathes": [
{%- if file < 100 %}
            "workspace/bg_texture_icon2.png",
            "workspace/tmp_texture_{{ file }}_icon.png",
            "workspace/bg_texture_icon.png"
{%- else %}
            "workspace/tmp_texture_{{ file }}_icon.png",
            "workspace/bg_road_icon.png"
{%- endif %}
          ],
          "offset": {
            "x": 0,
            "y": 0
          }
        },
        {
          "name": "removeTransparent",
          "threthold": 128
        },
        {
          "name": "removeSpecialColor"
        }
      ]
    }
{%- if not loop.last %},{%- endif %}
{%- endfor %}
  ]
}