{%- set defs = [
    {"mode": "r", "type": "road_30", "path": "road_30"},
    {"mode": "t", "type": "texture_1", "path": "texture_1"},
] %}
{
  "version": 1,
  "definitions": [
{%- for def in defs %}
    {
      "outputPath": "dist\\{{def.path}}.png",
      "rules": [
        {
          "name": "mergeImage",
          "mode": "normal",
          "comment": "demo",
          "pathes": [
            "workspace\\tmp_{{def.path}}.png",
            "workspace\\bg_road.png"
          ],
          "offset": {
            "x": 0,
            "y": 0
          }
        },
        {
          "name": "removeSpecialColor"
        }
      ]
    },
    {
      "outputPath": "dist\\{{def.path}}_icon.png",
      "rules": [
        {
          "name": "mergeImage",
          "mode": "normal",
          "comment": "demo",
          "pathes": [
            "workspace\\tmp_{{def.path}}_icon.png",
            "workspace\\bg_icon.png"
          ],
          "offset": {
            "x": 0,
            "y": 0
          }
        },
        {
          "name": "removeSpecialColor"
        }
      ]
    }
{%- if not loop.last %},{%- endif %}
{%- endfor %}
  ]
}